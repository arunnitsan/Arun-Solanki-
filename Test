    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // --- Chart.js Initialization ---
            const skillsCtx = document.getElementById('skillsChart').getContext('2d');
            
            // Updated labels and data reflecting the new architectural skills
            new Chart(skillsCtx, {
                type: 'bar',
                data: {
                    labels: [
                        'Problem solving', 
                        'Responsive design',
                        'Web application architecture', 
                        'Web accessibility standards', 
                        'JavaScript frameworks', 
                        'React development',
                        'TypeScript usage',
                        'Code review practices',
                        'Cross-platform applications', 
                        'UI/UX collaboration',
                    ],
                    // Corresponding scores (out of 10)
                    datasets: [{
                        label: 'Skill Level',
                        data: [9.9, 9.8, 9.7, 9.7, 9.6, 9.5, 9.5, 9.5, 9.0, 9.0],
                        backgroundColor: '#3585B4',
                        borderColor: '#0B2D48',
                        borderWidth: 1,
                        borderRadius: 6,
                        barPercentage: 0.8,
                        categoryPercentage: 0.8
                    }]
                },
                options: {
                    indexAxis: 'y',
                    maintainAspectRatio: false,
                    responsive: true,
                    plugins: {
                        tooltip: {
                            callbacks: {
                                title: function(tooltipItems) {
                                    const item = tooltipItems[0];
                                    let label = item.chart.data.labels[item.dataIndex];
                                    if (Array.isArray(label)) {
                                      return label.join(' ');
                                    }
                                    return label;
                                }
                            }
                        },
                        legend: { display: false },
                        title: {
                            display: true,
                            text: 'Self-Assessed Proficiency (out of 10)',
                            padding: { bottom: 20 },
                            font: { size: 16, weight: 'bold' },
                            color: '#205375'
                        }
                    },
                    scales: {
                        x: {
                            beginAtZero: true,
                            max: 10,
                            grid: { display: true, color: '#A2D2FF30' },
                            ticks: { color: '#205375', stepSize: 1 }
                        },
                        y: {
                            grid: { display: false },
                            ticks: { color: '#0B2D48', font: { weight: 'bold', size: 14 } }
                        }
                    }
                }
            });

            // --- Fixed Navigation Scroll Logic ---
            const sections = document.querySelectorAll('section');
            const navLinks = document.querySelectorAll('.nav-link');
            const observerOptions = {
                root: null,
                rootMargin: '-30% 0px -30% 0px', 
                threshold: 0.5 
            };

            const observer = new IntersectionObserver((entries) => {
                let activeSectionId = '';
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        activeSectionId = entry.target.getAttribute('id');
                    }
                });

                navLinks.forEach(link => link.classList.remove('active'));
                if (activeSectionId) {
                     document.querySelector(`a[href="#\${activeSectionId}"]`).classList.add('active');
                } else {
                    const firstSection = document.getElementById('overview');
                    if (firstSection && firstSection.getBoundingClientRect().top > -50) {
                        document.querySelector('a[href="#overview"]').classList.add('active');
                    }
                }
                
            }, observerOptions);

            sections.forEach(section => {
                observer.observe(section);
            });
            
             document.querySelector('a[href="#overview"]').classList.add('active');

        });
    </script>
